<mvc:View
    controllerName="flexiblecollayout.controller.App"
	displayBlock="true"
	height="100%"
	xmlns="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<FlexibleColumnLayout id="flexibleColumnLayout" backgroundDesign="Solid" layout="TwoColumnsMidExpanded" >
		<beginColumnPages>
			<mvc:XMLView id="beginView" viewName="flexiblecollayout.view.View1"/>
		</beginColumnPages>
		<midColumnPages>
			<mvc:XMLView id="detailView" viewName="flexiblecollayout.view.Detail"/>
		</midColumnPages>
	</FlexibleColumnLayout>
</mvc:View>